<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
        <br>
    <h3>Create a new listing</h3>
    <form method="POST" action="/listings">
        <div class="mb-3">
           <lable for="title" class="form-label">Title</lable> 
           <input name="listing[title]" placeholder="enter title" type="text" class="form-control">
        </div>
        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable> 
            <textarea name="listing[description]"  type="text" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <lable for="image" class="form-label">Image Link</lable> 
            <input name="listing[image]" placeholder="enter image URL/Link" type="text" class="form-control">
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <lable for="Price" class="form-label">Price</lable> 
                <input name="listing[price]" placeholder="enter price" type="number" class="form-control">
            </div>
            <div class="mb-3 col-md-8">
                <lable for="country" class="form-label">Country</lable> 
                <input name="listing[location]" placeholder="enter country" type="text" class="form-control">
            </div>
        </div>
        
        <div class="mb-3">
            <lable for="location" class="form-lable">Location</lable> 
            <input name="listing[country]" placeholder="enter location" type="text" class="form-control">
        </div>
        <br>

        <button class="btn btn-dark add-btn ">Add</button>
        <br><br>
    </form>
</div>
</div>