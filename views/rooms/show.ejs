<% layout("layouts/boilerplate")%>

<div class="row">
  <div class="col-8 offset-2">
    <div class="card mt-4 pulse-card" id="patientCard"
      <% if (latestPulse && (latestPulse.pulse < 60 || latestPulse.pulse > 100)) { %>
        style="animation: blinkRed 1s infinite;"
      <% } %>
    >
      <div class="card-body1">
        <h3><strong>Patient Details</strong> </h3>
        <p class="card-text">
          <strong> Room No:</strong> <%= room.room %><br><br>
          <strong>Name:</strong> <%= room.Name %><br><br>
          <strong>Age:</strong> <%= room.age %><br><br>
          <strong>Condition:</strong> <%= room.Condition %><br><br>
          <strong>Doctor Name:</strong> <%= room.Doctor %><br><br>
          <strong>Body Temperature:</strong> 98.6&deg;C<br><br>
          <% if (latestPulse) { %>
            <strong>Latest Pulse:</strong>
            <span id="pulseVal"><%= latestPulse.pulse %></span> BPM<br>
          <% } else { %>
            <strong>Latest Pulse:</strong> Not available<br>
          <% } %>
        </p>

        <div class="action-buttons mt-4">
          <div class="d-flex justify-content-center gap-2 flex-wrap">
            <a href="/rooms/<%= room._id%>/edit" class="btn btn-dark">Edit Patient details</a>
            <form method="POST" action="/rooms/<%=room._id%>?_method=DELETE">
              <button class="btn btn-dark add-btn">Remove this Patient</button>
            </form>
            <button onclick="stopBlinking()" class="btn btn-success">Change condition</button>
          </div>
        
          <div class="mt-3 text-center">
            <a href="/rooms" class="btn btn-info">‚Üê Back to Dashboard</a>
          </div>
        </div>
        
        
      </div>
    </div>
  </div>
</div>




  